{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["images", "sources", "kustomizations"],
  "properties": {
    "images": {
      "type": "object",
      "required": [
        "registry",
        "helmController",
        "sourceController",
        "kustomizeController",
        "notificationController",
        "imageAutomationController",
        "imageReflectorController"
      ],
      "properties": {
        "registry": {
          "type": "string",
          "minLength": 1
        },
        "helmController": {
          "type": "object",
          "required": ["image"],
          "properties": {
            "image": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "sourceController": {
          "type": "object",
          "required": ["image"],
          "properties": {
            "image": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "notifictionController": {
          "type": "object",
          "required": ["image"],
          "properties": {
            "image": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "kustomizeController": {
          "type": "object",
          "required": ["image"],
          "properties": {
            "image": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "imageAutomationController": {
          "type": "object",
          "required": ["image"],
          "properties": {
            "image": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "imageReflectorController": {
          "type": "object",
          "required": ["image"],
          "properties": {
            "image": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "sources": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "kind",
          "name",
          "url",
          "credentials",
          "interval",
          "branch"
        ],
        "properties": {
          "kind": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "credentials": {
            "type": "object",
            "required": ["username", "password"],
            "properties": {
              "username": {
                "type": "string",
                "minLength": 1
              },
              "password": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          },
          "interval": {
            "type": "string",
            "minLength": 1
          },
          "branch": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "kustomizations": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": ["name", "source_name", "path", "prune", "interval"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "source_name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "prune": {
            "type": "boolean"
          },
          "interval": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "crds": {
      "type": "object",
      "required": ["install"],
      "properties": {
        "install": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "sopsEncryption": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "encryptionKeys": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
