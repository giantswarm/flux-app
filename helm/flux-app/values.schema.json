{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "definitions": {
    "controllerImageProps": {
      "type": "object",
      "required": ["image"],
      "properties": {
        "image": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "volumeProps": {
      "type": "object",
      "required": ["size"],
      "properties": {
        "size": {
          "type": "string",
          "pattern": "^([+-]?[0-9.]+)([eEinumkKMGTP]*[-+]?[0-9]*)$"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["images", "sources", "kustomizations", "volumes"],
  "properties": {
    "images": {
      "type": "object",
      "required": [
        "registry",
        "helmController",
        "sourceController",
        "kustomizeController",
        "notificationController",
        "imageAutomationController",
        "imageReflectorController"
      ],
      "properties": {
        "registry": {
          "type": "string",
          "minLength": 1
        },
        "helmController": {
          "$ref": "#/definitions/controllerImageProps"
        },
        "sourceController": {
          "$ref": "#/definitions/controllerImageProps"
        },
        "notificationController": {
          "$ref": "#/definitions/controllerImageProps"
        },
        "kustomizeController": {
          "$ref": "#/definitions/controllerImageProps"
        },
        "imageAutomationController": {
          "$ref": "#/definitions/controllerImageProps"
        },
        "imageReflectorController": {
          "$ref": "#/definitions/controllerImageProps"
        }
      },
      "additionalProperties": false
    },
    "sources": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": [
          "kind",
          "name",
          "url",
          "credentials",
          "interval",
          "branch",
          "provider"
        ],
        "properties": {
          "kind": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "credentials": {
            "type": "object",
            "required": ["username", "password"],
            "properties": {
              "username": {
                "type": "string",
                "minLength": 1
              },
              "password": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          },
          "interval": {
            "type": "string",
            "minLength": 1
          },
          "provider": {
            "type": "string",
            "minLength": 1
          },
          "branch": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "kustomizations": {
      "type": "array",
      "additionalItems": false,
      "items": {
        "type": "object",
        "required": ["name", "source_name", "path", "prune", "interval"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "source_name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          },
          "prune": {
            "type": "boolean"
          },
          "interval": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "crds": {
      "type": "object",
      "required": ["install"],
      "properties": {
        "install": {
          "type": "boolean"
        },
        "resources": {
          "type": "object",
          "required": ["limits", "requests"],
          "properties": {
            "limits": {
              "type": "object",
              "required": ["cpu", "memory"],
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              },
              "additionalProperties": false
            },
            "requests": {
              "type": "object",
              "required": ["cpu", "memory"],
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "sopsEncryption": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "encryptionKeys": {
          "type": "array",
          "additionalItems": false,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "additionalProperties": false
    },
    "volumes": {
      "type": "object",
      "required": [
        "helmController",
        "sourceController",
        "kustomizeController",
        "notificationController",
        "imageAutomationController",
        "imageReflectorController"
      ],
      "properties": {
        "helmController": {
          "type": "object",
          "required": ["temp"],
          "properties": {
            "temp": {
              "$ref": "#/definitions/volumeProps"
            }
          },
          "additionalProperties": false
        },
        "sourceController": {
          "type": "object",
          "required": ["temp", "data"],
          "properties": {
            "temp": {
              "$ref": "#/definitions/volumeProps"
            },
            "data": {
              "$ref": "#/definitions/volumeProps"
            }
          },
          "additionalProperties": false
        },
        "kustomizeController": {
          "type": "object",
          "required": ["temp"],
          "properties": {
            "temp": {
              "$ref": "#/definitions/volumeProps"
            }
          },
          "additionalProperties": false
        },
        "notificationController": {
          "type": "object",
          "required": ["temp"],
          "properties": {
            "temp": {
              "$ref": "#/definitions/volumeProps"
            }
          },
          "additionalProperties": false
        },
        "imageAutomationController": {
          "type": "object",
          "required": ["temp"],
          "properties": {
            "temp": {
              "$ref": "#/definitions/volumeProps"
            }
          },
          "additionalProperties": false
        },
        "imageReflectorController": {
          "type": "object",
          "required": ["temp", "data"],
          "properties": {
            "temp": {
              "$ref": "#/definitions/volumeProps"
            },
            "data": {
              "$ref": "#/definitions/volumeProps"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
